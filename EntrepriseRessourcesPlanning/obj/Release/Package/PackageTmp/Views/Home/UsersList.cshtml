@using EntrepriseRessourcesPlanning.Models;
@model IEnumerable<User>

<style>
    .provider-list-container {
        
        margin: 20px;
        padding: 20px;
        background-color: #f8f8f8;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    .provider-item {
        
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    .provider-name {
       
        font-weight: bold;
        margin-bottom: 5px;
    }

    .provider-details {
        
        margin-bottom: 10px;
    }

    .button-container {
       
        text-align: right;
        margin-top: 10px;
    }

    .modify-button,
    .delete-button {
       
        padding: 5px 10px;
        background-color: #337ab7;
        color: #fff;
        border: none;
        border-radius: 4px;
        margin-right: 5px;
        cursor: pointer;
    }
</style>

<h1>All Users</h1>

<div class="provider-list-container">
    @foreach (var user in Model)
    {
        <div class="provider-item">
            <div class="provider-name">User CIN: @user.UserCIN</div>
            <div class="provider-details">
                <strong>Full Name:</strong> @user.Name<br />
                <strong>Username:</strong> @user.Username<br />
                <strong>Password:</strong> @user.Password
            </div>
            <div class="button-container">
                @if (user.UserCIN != "22222222")
                {
                <a class="delete-button" href="@Url.Action("DeleteUser", "Home", new { userCIN = user.UserCIN })">Delete</a>
                }
            </div>
        </div>
    }
</div>
